# Application
APP_NAME=FamilyTreeAPI
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=info
APP_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT / Auth
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# MongoDB
MONGODB_URI= your_mongodb_uri mongodb://localhost:27017
MONGODB_DB=family_tree

# Neo4j
NEO4J_URI= your_neo4j_uri bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

# SMTP (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER= your_email@gmail.com
SMTP_PASS= your_email_password_app 